{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "sdcc",
            "args": [
                "${workspaceRoot}/tnze.c"
            ],
            "options": {
                "cwd": "${workspaceRoot}/bin"
            },
            "problemMatcher": []
        },
        {
            "label": "build HEX",
            "type": "shell",
            "command": "packihx",
            "args": [
                "${workspaceRoot}/bin/tnze.ihx",
                ">",
                "${workspaceRoot}/bin/tnze.hex"
            ],
            "options": {
                "cwd": "${workspaceRoot}/bin"
            },
            "problemMatcher": [],
            "dependsOn": [
                "build"
            ]
        },
        {
            "label": "download",
            "type": "shell",
            "command": "python",
            "args": [
                "/Users/Tnze/Documents/projects/51/tools/stcflash.py",
                "--port",
                "/dev/tty.wchusbserial1420",
                "--lowbaud",
                "19200",
                "--protocol",
                "89",
                "${workspaceRoot}/bin/tnze.ihx"
            ],
            "options": {
                "cwd": "${workspaceRoot}/bin/"
            },
            "problemMatcher": [],
            "dependsOn": [
                "build"
            ]
        },
        {
            "label": "read message",
            "type": "shell",
            "command": "python",
            "args": [
                "/Users/Tnze/Documents/projects/51/tools/stcflash.py",
                "--port",
                "/dev/tty.wchusbserial1420",
                "--lowbaud",
                "19200"
            ],
            "options": {
                "cwd": "${workspaceRoot}/bin/"
            },
            "problemMatcher": [],
            "dependsOn": []
        }
    ]
}