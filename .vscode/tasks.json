{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "sdcc", //Mac下的编译器
            "args": [
                "${workspaceRoot}/tnze.c"
            ],
            "options": {
                "cwd": "${workspaceRoot}/bin/"
            },
            "problemMatcher": []
        },
        {
            "label": "download",
            "type": "shell",
            "command": "${config:python.pythonPath}",
            "args": [
                "/Users/Tnze/Documents/projects/51/tools/stcflash.py", //From https://github.com/laborer/stcflash
                "--port",
                "/dev/tty.wchusbserial1410", //Your USB to TTL port
                "${workspaceRoot}/bin/tnze.ihx"
            ],
            "problemMatcher": [],
            "dependsOn": [
                "build"
            ]
        }
    ]
}